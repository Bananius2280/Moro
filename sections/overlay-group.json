{
  "type": "custom.overlay",
  "name": "Overlay group",
  "sections": {
    "newsletter-popup": {
      "type": "newsletter-popup",
      "disabled": true,
      "settings": {
        "apparition_delay": 5,
        "show_only_on_index": true,
        "show_only_for_visitors": true,
        "show_only_once": true,
        "title": "Signup for our newsletter",
        "button_text": "Subscribe",
        "subtext": "Describe what your customers will receive when subscribing to your newsletter."
      }
    },
    "privacy-banner": {
      "type": "privacy-banner",
      "settings": {
        "privacy_bar_title": "Cookie policy",
        "privacy_bar_content": "<p>Ми використовуємо файли cookie та подібні технології, щоб забезпечити найкращий досвід роботи на нашому веб-сайті. Для отримання додаткової інформації зверніться до нашої Політики конфіденційності.<\/p>"
      }
    },
    "cart-drawer": {
      "type": "cart-drawer",
      "settings": {
        "show_cart_note": true,
        "show_shipping_text": false,
        "show_view_cart_button": true,
        "show_checkout_button": true,
        "recommendations_title": "Найкраща пропозиція",
        "products": [
          "smart-led-лампа-m-9079"
        ],
        "product_card_background": "#f2f2f2",
        "product_card_text_color": ""
      }
    },
    "search-drawer": {
      "type": "search-drawer",
      "settings": {
        "full_width": true,
        "show_article_category": true,
        "search_menu": "main-menu",
        "search_menu_show_title": false
      }
    }
  },
  "order": [
    "newsletter-popup",
    "privacy-banner",
    "cart-drawer",
    "search-drawer"
  ]
}